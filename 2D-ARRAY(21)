//Create and input elements in a 2-D Array of integers. Replace all even elements stored in it with 1 and all odd elements stored in it with 0.
// Display the matrix before and after the changes.
#include <stdio.h>

int main() {
    int arr[3][3] = {
        {7, 8, 6},
        {2, 7, 3},
        {2,3,4},
    };
    int i,j;
    int rs=sizeof(arr)/sizeof (arr[0]);
    printf("\nGENERALISED WAY TO CALCULATE ROW SIZE: %d",rs);
	int cs=sizeof(arr[i])/sizeof (arr[i][0]);
    printf("\nGENERALISED WAY TO CALCULATE COLUMN SIZE: %d",cs);
    printf("\n");
    for(i=0;i<rs;i++)
    {
    	for(j=0;j<cs;j++)
    	{
    		if(arr[i][j]%2==0)
    		{
    			arr[i][j]=1;	
		    }
		    else if(arr[i][j]%3==0)
		    {
		    	arr[i][j]=0;
			}
			printf("%d \t",arr[i][j]);
		}
		printf("\n");
		}
	
		
	}
	

