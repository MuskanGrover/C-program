//Display the sum of even elements of a 1-D array.
#include<stdio.h>
int main()
{
	int n;
	printf("ENTER THE VALUE OF SIZE OF ARRAY: ");
	scanf("%d",&n);
	int arr[n];
	printf("\nENTER VALUE OF ARRAY: ");
	for(int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	int sum=0;
	for(int i=0;i<n;i++)
	{
		if(arr[i]%2==0)
		{
			sum=sum+arr[i];
		}
	}
	printf("\n THE SUM OF EVEN ELEMENTS OF ARRAY ARE: %d",sum);
}
