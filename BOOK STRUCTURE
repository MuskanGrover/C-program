/*
  Creating a book structure and its object.
  Enter and display the elements of the book object.
  Author:
  Date:
*/
#include<stdio.h>
struct Book
{
	char Bookname[20];
	float price;
	int pages;
};
int main()
{
	struct Book b1;
	printf("\nENTER THE NAME OF BOOK : ");
	gets(b1.Bookname);
	printf("\nENTER THE PRICE OF BOOK : ");
	scanf("%f",&b1.price);
	printf("\nENTER THE PAGES OF BOOK : ");
	scanf("%d",&b1.pages);
	printf("\n%s \n%f \n%d",b1.Bookname,b1.price,b1.pages);
	
}
