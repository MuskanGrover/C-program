//Display the middle row elements of a 2-D Array of integers.
#include <stdio.h>

int main() {
    int arr[3][4] = {
        {7, 8, 6,5},
        {2, 7, 3,8},
        {4, 7, 9,0},
    };
    int i,j;
    int rs=sizeof(arr)/sizeof (arr[0]);
    printf("\nGENERALISED WAY TO CALCULATE ROW SIZE: %d",rs);
	int cs=sizeof(arr[i])/sizeof (arr[i][0]);
    printf("\nGENERALISED WAY TO CALCULATE COLUMN SIZE: %d",cs);
    int midrow=rs/2;


    for(int i=0;i<cs;i++)
    {
    	printf("\nTHE MID ROW ELEMENTS ARE: %d",arr[midrow][i]);
	}
	return 0;
}
