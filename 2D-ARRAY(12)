//Display the sum of right diagonal elements of a 2 D Array of integers.
#include <stdio.h>

int main() {
    int arr[3][4] = {
        {7, 8, 6,5},
        {2, 7, 3,8},
        {4, 7, 9,0},
    };
    int i,j;
    int rs=sizeof(arr)/sizeof (arr[0]);
    printf("\nGENERALISED WAY TO CALCULATE ROW SIZE: %d",rs);
	int cs=sizeof(arr[i])/sizeof (arr[i][0]);
    printf("\nGENERALISED WAY TO CALCULATE COLUMN SIZE: %d",cs);
    
    

    int sum = 0;

    for ( i = 0; i <3 ; i++) {
        for (int j = 0; j < 4; j++) {
        	if((i+j)==2)
        	{
            sum += arr[i][j];
            }
        }
    }

    printf("\nSum of all elements: %d\n", sum);

    return 0;
}
