//Display the sum, count, and average of elements of a 1-D
//integer array.
#include<stdio.h>
int main()
{
	int n;
	printf("ENTER THE SIZE OF ARRAY: ");
	scanf("%d",&n);
	int arr[n];
	printf("\nENTER THE ELEMENTS OF ARRAY: ");
	for(int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	for(int i=0;i<n;i++)
	{
		printf("\nTHE ELEMENTS OF ARRAY ARE: %d\t",arr[i]);
	}
	int sum=0;
	int count=0;
	for(int j=0;j<n;j++)
	{
		count++;
		sum=sum+arr[j];
	}
	printf("\nTHE SUM OF ARRAY ELEMENTS ARE: %d ",sum);
	printf("\nTHE COUNT OF ARRAY ELEMENTS ARE: %d",count);
	printf("\nTHE AVERAGE OF ELEMNTS ARE:%d",sum/n);
	
	
}
