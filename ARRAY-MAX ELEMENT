//Display the maximum element of a 1-D array.
#include<stdio.h>
int main()
{
	int n;
	printf("ENTER THE VALUE OF N : ");
	scanf("%d",&n);
	int arr[n];
	printf("ENTER VALUES OF ARRAY ");
	for(int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	int max=arr[0];
	for(int i=1;i<n;i++)
	{
		if(arr[i]>max)
		{
			max=arr[i];
			
		}
	}
	printf("\n THE MAX VALUE IS %d",max);
}
